# Invoice OCR Backend - Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=Invoice OCR Service
API_VERSION=v1
DEBUG=False

# SAP HANA Cloud Database Configuration
HANA_HOST=your-hana-instance.hanacloud.ondemand.com
HANA_PORT=443
HANA_USER=DBADMIN
HANA_PASSWORD=your-hana-password
HANA_SCHEMA=
HANA_ENCRYPT=True

# File Upload Settings
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=/tmp/uploads

# CORS Settings (comma-separated origins for production)
# For local development:
CORS_ORIGINS=["http://localhost:8080","http://localhost:5000","http://127.0.0.1:8080"]
# For production:
# CORS_ORIGINS=["https://your-ui5-app.cfapps.us10.hana.ondemand.com"]

# SAP Document AI Configuration
# Path to service key file (relative to backend directory)
DOX_SERVICE_KEY_PATH=dox-service-key.json
